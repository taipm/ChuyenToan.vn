    <script src="~/Content/Templates/quickly-web/web/js/bootstrap.js"></script>
    <script src="~/Content/Templates/quickly-web/web/js/jquery.flexisel.js"></script>
    <script src="~/Content/Templates/quickly-web/web/js/jquery.swipebox.min.js"></script>
    <script src="~/Content/Templates/quickly-web/web/js/responsiveslides.min.js"></script>
