	<script src="~/Content/templated-exmachina/js/skel-panels.min.js"></script>
	<script src="~/Content/templated-exmachina/js/skel.min.js"></script>
	<noscript>
		<link href="~/Content/templated-exmachina/css/skel-noscript.css" rel="stylesheet" />
		<link href="~/Content/templated-exmachina/css/style.css" rel="stylesheet" />
		<link href="~/Content/templated-exmachina/css/style-desktop.css" rel="stylesheet" />
	</noscript>
	@Styles.Render("~/Content/jqueryui")
	@Scripts.Render("~/bundles/modernizr")
