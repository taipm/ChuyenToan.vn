    <div class="widget">
        <div class="widget-title">
            <h4>Mạng xã hội</h4>
            <hr>
        </div>
        <!-- end widget-title -->
        <div class="links-widget darkcolor m30">
            <div class="post-review col-md-12 col-sm-12 col-xs-12">
                <ul class="sociallinks">
                    <li><a href="@linkFacebook"><i class="fa fa-facebook"></i> Facebook</a></li>
                    <li><a href="@linkTwitter"><i class="fa fa-twitter"></i> Twitter</a></li>
